<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>PaganGnosisPortal</title>
        
        {% block stylesheets %}
        <link href="https://unpkg.com/fylgja/fylgja.css" rel="stylesheet">
        <style>            
            body {
                background-color: #e6c083;
                color: #201d17;                
            }
            .login-container {
                display: flex;
                height: 100vh;
            }
            .login-part {
                display: flex;
                width: 75%;
            }
            .image-part {
                flex-grow: 1; /* Takes remaining space */
                display: flex;
                align-items: center;
                justify-content: center;
                overflow: hidden; /* Prevents unwanted overflow */
            }
            .image-part img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Ensures the image covers the entire right section */
            }
        </style>
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <div class="login-container">
            <div class="login-part">
                <div class="login-form">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
    
                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}
    
                        <div class="card card-content logincard">
                            <h1 class="h3 mb-3 font-weight-normal">Welcome!</h1>
                            <label for="username">Username</label>
                            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                            <label for="password">Password</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
    
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
    
                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html
    
                                <div class="checkbox mb-3">
                                    <input type="checkbox" name="_remember_me" id="_remember_me">
                                    <label for="_remember_me">Remember me</label>
                                </div>
                            #}
    
                            <button class="btn btn-lg btn-primary btn -outline" type="submit" style="width: 100px;margin-top: 10px;">
                                Sign in
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="image-part"><img src="{{ asset('images/loginwood.jpg') }}" alt="Logo"></div>
        </div>
    </body>
</html>